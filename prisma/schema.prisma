generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  email String? @unique
  name  String?

  state          UserState?
  checkIns       DailyCheckIn[]
  appliedRewards AppliedReward[]
}

model UserState {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  level   Int @default(1)
  energy  Int @default(50)
  loyalty Int @default(0)
  fatigue Int @default(0)

  streak    Int @default(0)
  streakRun Int @default(0)

  updatedAt DateTime @updatedAt
}

model DailyCheckIn {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  date      DateTime @db.Date
  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
}

model Reward {
  id          String  @id
  title       String
  description String?
  type        String // "streak"
  threshold   Int
  effects     Json? // e.g. {"loyalty": 50, "energy": 10}

  applied AppliedReward[]
}

model AppliedReward {
  id        String   @id @default(uuid())
  userId    String
  rewardId  String
  appliedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  reward Reward @relation(fields: [rewardId], references: [id], onDelete: Cascade)

  @@unique([userId, rewardId])
  @@index([userId])
  @@index([rewardId])
}
